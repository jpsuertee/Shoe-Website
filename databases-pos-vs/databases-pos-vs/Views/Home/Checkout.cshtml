@model databseApp.Models.UserViewModel
@{
    ViewData["Title"] = "Checkout   ";
}

<div class="jumbotron">
	<h1>@ViewData["Title"]</h1>
	<h3>Total Amount: $@Context.Request.Cookies["Sum"]</h3>
</div>

<form asp-action="Checkout">
	<div class="row">
		<div class="col-50">
			<h3>Customer Information</h3>
			<div>Customer ID: @Html.DisplayFor(model => model.UserID)</div>
			<div>First Name: @Html.DisplayFor(model => model.FirstName_)</div>
			<div>Last Name: @Html.DisplayFor(model => model.LastName_)</div>
			<div>Email: @Html.DisplayFor(model => model.Email)</div>
		</div>
	</div>

	<div class="row">
		<div class="col-50">
			<h3>Shipping Address</h3>
			<label asp-for="Shipping_Address"><i class="fa fa-address-card-o"></i> Shipping Address</label>
			<input type="text" asp-for="Shipping_Address" placeholder="@Html.DisplayFor(model => model.Address)">
			<label><i class="fa fa-address-card-o"></i> State</label>
			<input type="text" placeholder="@Html.DisplayFor(model => model.State)">
		</div>
	</div>

	<div class="row">
		<div class="col-50">
			<h3>Payment</h3>
			<label asp-for="Payment_Method">Type of Card</label>
			<input asp-for="Payment_Method" type="text" placeholder="VISA">
			<label for="ccnum">Credit card number</label>
			<input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
			<label for="expmonth">Exp Month</label>
			<input type="text" id="expmonth" name="expmonth" placeholder="September">


			<div class="col-50">
				<label for="expyear">Exp Year</label>
				<input type="text" id="expyear" name="expyear" placeholder="2018">
			</div>
			<div class="col-50">
				<label for="cvv">CVV</label>
				<input type="text" id="cvv" name="cvv" placeholder="352">
			</div>

		</div>
	</div>
	<button type="submit" class="btn btn-primary">Checkout</button>
</form>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




